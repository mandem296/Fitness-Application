<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="5.5"
            android:shape="ring"
            android:thicknessRatio="70.0"
            android:useLevel="false">
            <gradient
                android:centerColor="#3F51B5"
                android:endColor="#3F51B5"
                android:startColor="#3F51B5"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270.0"
            android:pivotX="50.0%"
            android:pivotY="50.0%"
            android:toDegrees="270.0">
            <shape
                android:innerRadiusRatio="5.5"
                android:shape="ring"
                android:thicknessRatio="70.0"
                android:useLevel="true">
                <rotate
                    android:fromDegrees="270.0"
                    android:pivotX="50.0%"
                    android:pivotY="50.0%"
                    android:toDegrees="270.0" />
                <gradient
                    android:centerColor="#ffd2d2d2"
                    android:endColor="#ffd2d2d2"
                    android:startColor="#ffd2d2d2"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>